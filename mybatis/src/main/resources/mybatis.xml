<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="no.bouvet.mybatis.domain.Airplane" alias="Airplane"></typeAlias>
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver" />
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:XE" />
				<property name="username" value="hibtest" />
				<property name="password" value="hibtest" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="AirplaneMapper.xml" />
<!-- 		<mapper class="no.bouvet.mybatis.mapper.AirplaneMapper"/>
 -->	</mappers>
</configuration>